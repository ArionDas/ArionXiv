# ArionXiv Configuration Template
# Copy this file to .env and fill in your values

# MongoDB Database Configuration
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/arionxiv?retryWrites=true&w=majority
DATABASE_NAME=arionxiv

# MongoDB Connection Settings (milliseconds)
MONGODB_CONNECT_TIMEOUT=30000
MONGODB_SERVER_SELECTION_TIMEOUT=30000
MONGODB_SOCKET_TIMEOUT=30000
MONGODB_MAX_POOL_SIZE=10
MONGODB_RETRY_WRITES=true
MONGODB_RETRY_READS=true

# AI/LLM Configuration  
GROQ_API_KEY=your_groq_api_key_here
DEFAULT_ANALYSIS_MODEL=llama-3.3-70b-versatile

# OpenRouter Configuration (access to free models like Llama 3.3)
# Get your free API key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct:free
OPENROUTER_SITE_URL=https://github.com/ArionDas/ArionXiv
OPENROUTER_SITE_NAME=ArionXiv

# LLM Provider Selection for RAG Chat
# Options: "groq" (default), "openrouter"
RAG_LLM_PROVIDER=openrouter

# Logging Configuration
ARIONXIV_DEBUG=false
ARIONXIV_QUIET=false

# Daily Analysis Configuration
DAILY_CRON_HOUR=6
DAILY_CRON_MINUTE=0
TIMEZONE=UTC

# ArXiv Search Configuration
ARXIV_MAX_RESULTS=50
ARXIV_SEARCH_DAYS=7

# Analysis Configuration
ANALYSIS_BATCH_SIZE=5
ANALYSIS_TIMEOUT=60
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.3

# Embedding Model Configuration
# Primary: Google Gemini embedding-001 (FREE API, requires GEMINI_API_KEY)
# Set to "gemini" for Gemini or a HuggingFace model name for local embeddings
EMBEDDING_PRIMARY_MODEL=gemini

# Fallback embedding models (small HuggingFace models, run locally)
EMBEDDING_FALLBACK_1=ibm-granite/granite-embedding-30m-english
EMBEDDING_FALLBACK_2=all-MiniLM-L6-v2

# Embedding settings
EMBEDDING_DIMENSION_DEFAULT=768
EMBEDDING_ENABLE_GEMINI=true
EMBEDDING_ENABLE_HUGGINGFACE=true
EMBEDDING_BATCH_SIZE=10
EMBEDDING_CACHE_ENABLED=true

# Optional: Google Gemini API for embeddings (requires API key)
GEMINI_API_KEY=

# RAG System Configuration
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K_RESULTS=5
RAG_TTL_HOURS=24
RAG_VECTOR_COLLECTION=paper_embeddings
RAG_CHAT_COLLECTION=chat_sessions